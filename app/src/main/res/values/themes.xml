<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Menu_tabs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar." parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="Theme.Menu_tabs" parent="Base.Theme.Menu_tabs"/>
    <style name="Base.Theme.AppCompat.DayNight.NoActionBar." parent="Theme.AppCompat.DayNight.NoActionBar."/>

</resources>